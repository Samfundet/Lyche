source 'http://rubygems.org'

gem 'rails', '3.2.12'

gem 'jquery-rails'
gem 'haml'
gem 'acts_as_list'

# Translation
gem 'rails-translate-routes'

gem 'therubyracer', require: 'v8'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :production do
  gem 'pg'
end

group :test, :development do
  gem 'sqlite3'
end
